            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .ex6-header {
            height: 90px;
            position: relative;
        }

        .radar-circle {
            position: absolute;
            top: 50%;
            left: 50px;
            width: 20px;
            height: 20px;
            background: var(--sea-orange);
            border-radius: 50%;
            transform: translateY(-50%);
            box-shadow: 0 0 0 0 rgba(240, 139, 51, 0.4);
            animation: radarPulse 3s infinite;
        }

        @keyframes radarPulse {
            0% {
                box-shadow: 0 0 0 0 rgba(240, 139, 51, 0.7);
            }

            70% {
                box-shadow: 0 0 0 150px rgba(240, 139, 51, 0);
            }

            100% {
