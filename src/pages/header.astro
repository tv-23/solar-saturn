            color: var(--sea-blue);
        }

        .logo span {
            color: var(--sea-orange);
        }

        .ex14-nav {
            background: var(--dark);
            color: white;
        }

        .ex14-top {
            height: 50px;
            position: relative;
        }

        .node {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 11px;
            z-index: 2;
            position: relative;
        }

        .node i {
            color: var(--sea-orange);
        }

        .path-line {
            position: absolute;
            top: 50%;
            left: 0;
            width: 100%;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--sea-orange), transparent);
            opacity: 0.3;
            z-index: 1;
        }

        .ex14-header {
            height: 80px;
            background: rgba(255, 255, 255, 0.02);
        }

        .ex14-links a {
            font-family: 'JetBrains Mono';
            font-size: 13px;
            color: #888;
        }

        .ex14-links a:hover {
            color: var(--sea-orange);
        }

        .ex14-top i.bi {

