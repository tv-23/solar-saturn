---
import "../../../public/style/our-companies.css";
---

<section
    class="about-modern py-5 position-relative overflow-hidden"
    id="our-values"
>
    <div class="container py-lg-5">
        <!-- CENTERED HEADER -->
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <span
                    class="d-inline-block py-1 px-3 rounded-pill bg-light-orange text-secondary fw-bold text-uppercase small mb-2"
                >
                    Our Companies
                </span>
            </div>
        </div>
    </div>

    <div class="elastic-container">
        <!-- 1. MSS -->
        <div
            class="elastic-panel"
            style="background-image: url('https://images.unsplash.com/photo-1548013146-72479768bada?q=80&w=1600&auto=format&fit=crop');"
        >
            <!-- Icon Center -->
            <div class="panel-icon">
                <img src="/images/companies/1.jpg" alt="" />
            </div>
            <!-- Hidden Content -->
            <div class="panel-content">
                <h3 class="panel-title">MSS</h3>
                <p class="panel-desc">
                    Maritime Ship Services. Your trusted shipping agency
                    providing crew changes, vessel consignment, and husbandry
                    across all ports.
                </p>
                <a href="#" class="panel-btn">Discover MSS</a>
            </div>
        </div>

        <!-- 2. INTERNAVI -->
        <div
            class="elastic-panel"
            style="background-image: url('https://images.unsplash.com/photo-1588611910609-0d1279a0ce6a?q=80&w=1600&auto=format&fit=crop');"
        >
            <div class="panel-icon">
                <img src="/images/companies/2.jpg" alt="" />
            </div>
            <div class="panel-content">
                <h3 class="panel-title">Internavi</h3>
                <p class="panel-desc">
                    High-precision technical repairs, reefer maintenance, and
                    electronic solutions keeping your fleet operational.
                </p>
                <a href="#" class="panel-btn">Technical Solutions</a>
            </div>
        </div>

        <!-- 3. BTS -->
        <div
            class="elastic-panel"
            style="background-image: url('https://images.unsplash.com/photo-1461353537234-136111774d68?q=80&w=1600&auto=format&fit=crop');"
        >
            <div class="panel-icon">
                <img src="/images/companies/3.jpg" alt="" />
            </div>
            <div class="panel-content">
                <h3 class="panel-title">BTS</h3>
                <p class="panel-desc">
                    Bureau Technique de Surveillance. Certified cargo
                    inspections, quality control, and tallying services.
                </p>
                <a href="#" class="panel-btn">View Services</a>
            </div>
        </div>

        <!-- 4. SEATRADE / LOGISTICS -->
        <div
            class="elastic-panel"
            style="background-image: url('https://images.unsplash.com/photo-1494412574643-35d324698420?q=80&w=1600&auto=format&fit=crop');"
        >
            <div class="panel-icon">
                <img src="/images/companies/4.jpg" alt="" />
            </div>
            <div class="panel-content">
                <h3 class="panel-title">Seatrade</h3>
                <p class="panel-desc">
                    Global container line representation and freight forwarding
                    solutions connecting you to the world.
                </p>
                <a href="#" class="panel-btn">Global Network</a>
            </div>
        </div>

        <!-- 5. SEATRADE / LOGISTICS -->
        <div
            class="elastic-panel"
            style="background-image: url('https://images.unsplash.com/photo-1494412574643-35d324698420?q=80&w=1600&auto=format&fit=crop');"
        >
            <div class="panel-icon">
                <img src="/images/companies/5.jpg" alt="" />
            </div>
            <div class="panel-content">
                <h3 class="panel-title">Seatrade</h3>
                <p class="panel-desc">
                    Global container line representation and freight forwarding
                    solutions connecting you to the world.
                </p>
                <a href="#" class="panel-btn">Global Network</a>
            </div>
        </div>
    </div>
</section>

<script>
    // Simple script to allow 'tap' to expand on tablets if hover doesn't work well
    const panels = document.querySelectorAll(".elastic-panel");

    panels.forEach((panel) => {
        panel.addEventListener("click", () => {
            // Remove active class from all
            panels.forEach((p) => (p.style.flex = "1"));
            // Add flex grow to clicked
            if (window.innerWidth > 991) {
                panel.style.flex = "3";
            }
        });
    });
</script>
