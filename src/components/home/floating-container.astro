---
import "../../../public/style/floating-container.css";
---

<div class="container-fluid wecargo-section">
    <div class="row">
        
        <!-- LEFT: STICKY IMAGE -->
        <div class="col-lg-6 sticky-col">
            <img src="https://wecargo.ma/wp-content/uploads/2024/12/logo-wecargo-pohto.png" alt="WeCargo Container" class="cargo-img">
        </div>

        <!-- RIGHT: SCROLLABLE LIST -->
        <div class="col-lg-5 offset-lg-1 content-col">
            
            <h1 class="hero-title">
                We goes the extra<br>
                mile for you
            </h1>

            <div class="services-list">
                <!-- 01 -->
                <div class="service-item">
                    <span class="service-num">01</span>
                    <h3 class="service-title">Full Truckload</h3>
                    <p class="service-desc">Shipping ground? We help you get ahead with optimized routing.</p>
                    <i class="bi bi-arrow-right arrow-icon"></i>
                </div>

                <!-- 02 -->
                <div class="service-item">
                    <span class="service-num">02</span>
                    <h3 class="service-title">Volume Shipping</h3>
                    <p class="service-desc">Sending almost – but not quite – a truckload? We help you make the most of every mile.</p>
                    <i class="bi bi-arrow-right arrow-icon"></i>
                </div>

                <!-- 03 -->
                <div class="service-item">
                    <span class="service-num">03</span>
                    <h3 class="service-title">Less Than Truckload</h3>
                    <p class="service-desc">Cost-effective solutions for smaller freight that doesn't fill a whole truck.</p>
                    <i class="bi bi-arrow-right arrow-icon"></i>
                </div>

                <!-- 04 -->
                <div class="service-item">
                    <span class="service-num">04</span>
                    <h3 class="service-title">Intermodal Solutions</h3>
                    <p class="service-desc">Combining rail and road for sustainable, long-distance logistics.</p>
                    <i class="bi bi-arrow-right arrow-icon"></i>
                </div>

                <!-- 05 -->
                <div class="service-item">
                    <span class="service-num">05</span>
                    <h3 class="service-title">Expedited Freight</h3>
                    <p class="service-desc">When time is money, we ensure your cargo arrives on the dot.</p>
                    <i class="bi bi-arrow-right arrow-icon"></i>
                </div>
            </div>

        </div>
    </div>
</div>