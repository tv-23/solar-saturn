                    <div class="nav-item-custom" onclick="switchTab('vision')">Our Vision</div>
                    <div class="nav-item-custom" onclick="switchTab('values')">Our Commitments</div>
                </div>

                <!-- Content: MISSION -->
                <div id="text-mission" class="tab-text-content active">
                    <!-- <h2 class="main-headline">
