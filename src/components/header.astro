---
import "../../public/style/header.css";
---

<!-- Top Bar -->
<div class="top-bar">
    <div class="container d-flex justify-content-between align-items-center">
        <!-- Left: Info -->
        <div class="d-flex align-items-center">
            <div class="me-4">
                <a
                    href="https://www.google.com/maps/place/Seatrust+Logistics/data=!4m2!3m1!1s0x0:0xabbebd7ebdc68e5a?sa=X&ved=1t:2428&ictx=111"
                    target="_blank"
                >
                    <i class="bi bi-geo-alt-fill"></i> 12, Rue Oraibi Jilali (ex rue Foucauld) Casablanca 20.000
                </a>
            </div>
            <div>
                <a href="tel:+212671884968">
                    <i class="bi bi-telephone-fill"></i> +212 522 435 090
                </a>
            </div>
        </div>

        <!-- Right: Socials -->
        <div>
            <a
                target="_blank"
                href="https://www.facebook.com/seatrustgroup/?ref=bookmarks"
                ><i class="bi bi-facebook"></i></a
            >
            <a target="_blank" href="https://www.linkedin.com/company/18392886/"
                ><i class="bi bi-linkedin"></i></a
            >
            <a target="_blank" href="https://twitter.com/SeatrustG"
                ><i class="bi bi-twitter-x"></i></a
            >
        </div>
    </div>
</div>

<!-- Main Navigation -->
<nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container" style="padding: 0px;">
        <!-- Logo -->
        <a class="navbar-brand" href="/">
            <img src="/images/seatrust.png" alt="SeaTrust" />
        </a>

        <!-- Toggle Button -->
        <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navContent"
        >
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Links -->
        <div
            class="collapse navbar-collapse justify-content-end"
            id="navContent"
        >
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>
            </ul>
        </div>
    </div>

    <!-- The White Line running across the bottom -->
    <div class="header-line"></div>
</nav>
