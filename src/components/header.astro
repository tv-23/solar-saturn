---
import "../../public/style/header.css";
---
<!-- 1. TOP BAR -->
<div class="top-bar-luxury">
    <div class="container d-flex justify-content-between align-items-center">
        
        <!-- Left: Contact Info -->
        <div class="top-info">
            <div class="top-info-item">
                <i class="bi bi-telephone-fill"></i>
                <span>+212 522 435 090</span>
            </div>
            <div class="top-info-item">
                <i class="bi bi-geo-alt-fill"></i>
                <span>12, Rue Oraibi Jilali, Casablanca</span>
            </div>
            <div class="top-info-item d-none d-xl-flex"> <!-- Hidden on smaller screens -->
                <i class="bi bi-envelope-fill"></i>
                <span>contact@seatrust.ma</span>
            </div>
        </div>

        <!-- Right: Social Media -->
        <div class="top-social">
            <a href="#"><i class="bi bi-facebook"></i></a>
            <a href="#"><i class="bi bi-linkedin"></i></a>
            <a href="#"><i class="bi bi-twitter-x"></i></a>
        </div>
    </div>
</div>

<!-- 2. MAIN HEADER -->
<header class="header-curtain">
    <div class="container d-flex justify-content-between align-items-center">
        
        <!-- Brand Logo -->
        <a href="/">
            <img src="/images/SEATRUST-logo.png" class="logo-img" alt="Seatrust Group">
        </a>
        
        <!-- The Menu Trigger -->
        <div class="curtain-trigger" onclick="toggleMenu()">
            <span class="curtain-label">MENU</span>
            <div class="curtain-lines">
                <div class="curtain-line"></div>
                <div class="curtain-line short"></div>
                <div class="curtain-line"></div>
            </div>
        </div>

    </div>
</header>

<!-- 3. THE OVERLAY MENU (Hidden initially) -->
<div id="curtainMenu" class="curtain-overlay">
    <!-- Close Button -->
    <div class="close-curtain" onclick="toggleMenu()">&times;</div>
    
    <!-- Menu Links -->
    <div class="overlay-content">
        <a href="/">Home</a>
        <a href="#">Seatrust</a>
        <a href="#">Our Companies</a>
        <a href="#">Partners</a>
        <a href="/contact">Contact Us</a>
    </div>
</div>

<!-- JavaScript for Toggle -->
<script>

window.toggleMenu = function () {

    const menu = document.getElementById('curtainMenu');
    menu.classList.toggle('active');
}

</script>